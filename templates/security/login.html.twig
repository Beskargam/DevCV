{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="flipboard-login">
        <div class="container body-box">
            <div class="row">
                <div class="col-lg-12 flipboard-boxes">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <div class="card">

                                <div id="upper_left-news"></div>
                                <div id="upper_right-news"></div>
                                <div id="lower_left-news"></div>
                                <div id="lower_right-news"></div>

                                <div class="card-body">

                                    <form method="post">
                                        <div class="field-space">
                                            <label for="inputUsername" class="sr-only">Email</label>
                                            <input type="text" value="{{ last_username }}" name="username"
                                                   id="inputUsername"
                                                   class="form-control"
                                                   placeholder="Nom d'utilisateur" required autofocus>
                                        </div>
                                        <div class="field-space">
                                            <label for="inputPassword" class="sr-only">Password</label>
                                            <input type="password" name="password" id="inputPassword"
                                                   class="form-control"
                                                   placeholder="Mot de passe"
                                                   required>
                                        </div>
                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}">
                                        <button class="btn btn-lg btn-primary" type="submit">
                                            Connexion
                                        </button>

                                        <div class="field-space">
                                            {% if error %}
                                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                            {% endif %}
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/form.css') }}">
{% endblock %}
